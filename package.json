{
  "name": "linely",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "author": "dyoshikawa",
  "license": "MIT",
  "scripts": {
    "build": "docker build -t dyoshikawa/linely:latest .",
    "publish": "docker push dyoshikawa/linely:latest",
    "format": "prettier --write .",
    "format:check": "prettier -c .",
    "lint:secret": "secretlint '**/*'",
    "lint:js": "eslint --fix '**/*.{js,ts}'",
    "prepare": "husky install",
    "postinstall": "npm run prepare",
    "typec": "tsc --noEmit",
    "check": "npm run lint:secret && npm run format:check && npm run lint:js && npm run typec"
  },
  "devDependencies": {
    "@secretlint/secretlint-rule-preset-recommend": "^4.1.3",
    "@tsconfig/recommended": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "secretlint": "^4.1.3",
    "typescript": "^4.5.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "volta": {
    "node": "16.13.1",
    "npm": "8.3.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "npm run check"
    ]
  }
}
